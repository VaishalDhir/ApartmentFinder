<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ApartmentListFragment"
    android:background="@drawable/splashbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CE312C51"
        android:id="@+id/relmain">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:text="Apartment Finder"
        android:id="@+id/appname"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:textColor="@color/pale_orange"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/appname"
            android:gravity="end"
            >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CE312C51"
            android:textColor="@color/pale_orange"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:id="@+id/filterbtn"
            android:padding="3dp"
            android:text="Filter"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relsliderRange"
            android:layout_below="@+id/appname"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Price Range"
                android:textColor="@color/pale_orange"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/montserrat"
                android:id="@+id/txtrange">

            </TextView>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="50"
            android:layout_below="@+id/txtrange"
            android:valueFrom="1000.0"
            android:valueTo="5000.0"
            app:values="@array/rangeslider"
            app:haloColor="@android:color/holo_orange_light"
            app:thumbColor="@color/colorPrimaryDark"
            app:tickColor="@android:color/holo_red_dark"
            app:trackColor="@color/pale_orange"
          />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relsliderRange"

            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aplist"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>