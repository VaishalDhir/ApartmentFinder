<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.ApartmentListFragment"
    android:background="@drawable/splashbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CE312C51"
        android:id="@+id/relmain">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:text="Apartment Finder"
        android:id="@+id/appname"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:textColor="@color/pale_orange"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/appname"
            android:gravity="end"
            android:id="@+id/btnrel"
            >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CE312C51"
            android:textColor="@color/pale_orange"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:id="@+id/filterbtn"
            android:padding="3dp"
            android:text="Filter"
            />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/btnrel"

            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aplist"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>