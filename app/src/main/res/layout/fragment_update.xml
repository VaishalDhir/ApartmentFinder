<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddApartmentFragment"
        android:background="@drawable/splashbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_orange"
            android:gravity="center"
            android:text=""
            android:id="@+id/setError"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CE312C51"
            android:id="@+id/mainrel"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:textAlignment="center"
                android:hint="Apartment Type"

                android:fontFamily="@font/montserrat"
                android:layout_marginTop="50dp"
                android:id="@+id/apartType_ed"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:textAlignment="center"
                android:layout_below="@+id/apartType_ed"
                android:hint="Apartment Address"
                android:inputType="textMultiLine"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:id="@+id/apartaddress_ed"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:textAlignment="center"
                android:layout_below="@+id/apartaddress_ed"
                android:hint="Facilities"
                android:inputType="textMultiLine"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:id="@+id/apartfacility_ed"
                android:layout_marginLeft="35dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:layout_below="@+id/apartfacility_ed"
                android:layout_marginTop="20dp"
                android:id="@+id/lay1"
                android:weightSum="1"
                android:layout_marginStart="35dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edbackground"
                    android:layout_marginEnd="35dp"
                    android:textAlignment="center"
                    android:hint="Rent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:id="@+id/apartrent_ed"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edbackground"
                    android:layout_marginRight="35dp"
                    android:textAlignment="center"
                    android:hint="Size"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:id="@+id/apartsize_ed"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:textAlignment="center"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:layout_below="@+id/lay1"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:id="@+id/apartdesc_ed"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apartdesc_ed"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:textColor="@color/pale_orange"
                android:text="SELECT RENTER TYPE : "
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:id="@+id/txt_selectrentertype"/>
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_selectrentertype"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:weightSum="1"

                android:orientation="horizontal"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/pale_orange"
                    android:id="@+id/radioButton_family"
                    android:checked="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Girls"
                    android:textColor="@color/pale_orange"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/radioButton2_girls"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="25dp"
                    android:layout_weight="0.13" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boys"
                    android:textColor="@color/pale_orange"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/radioButton_boys"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="25dp"
                    android:layout_weight="0.13" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:id="@+id/imgrel"
                android:layout_below="@+id/radioGroup">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel1_img1"
                    android:layout_marginTop="20dp"
                    android:background="@color/White">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:id="@+id/img1"/>
                    <Button
                        android:id="@+id/apart_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img1"
                        android:textAlignment="center"
                        android:text="Image1"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel1_img2"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/rel1_img1"
                    android:layout_marginTop="20dp"
                    android:background="@color/White">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/img2"/>
                    <Button
                        android:id="@+id/apart_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img2"
                        android:textAlignment="center"
                        android:text="Image2"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel1_img3"
                    android:layout_below="@id/rel1_img1"
                    android:layout_marginTop="20dp"
                    android:background="@color/White">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/img3"/>
                    <Button
                        android:id="@+id/apart_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img3"
                        android:textAlignment="center"
                        android:text="Image3"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CE312C51"
                android:text="Update Property"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textColor="@color/pale_orange"
                android:layout_below="@id/imgrel"
                android:id="@+id/updateProp"
                />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>