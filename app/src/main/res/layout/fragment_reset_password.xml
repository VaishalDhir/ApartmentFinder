<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginFragment"
        android:background="@drawable/splashbackground">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CE312C51">
            <TextView
                android:id="@+id/ani1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bangers"
                android:text="A.F"
                android:textAlignment="center"
                android:textColor="#F0C38E"
                android:textSize="100dp"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ani1"
                android:textColor="@color/pale_orange"
                android:textAlignment="center"
                android:id="@+id/errortext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ani1"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"

                android:hint="Enter Your Email Id"
                android:padding="4dp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserrat"
                android:inputType="text"
                android:id="@+id/remail_ed"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/remail_ed"
                android:inputType="textPassword"
                android:textAlignment="center"

                android:layout_marginTop="15dp"
                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:padding="4dp"

                android:layout_marginLeft="35dp"
                android:hint="Enter Password"
                android:fontFamily="@font/montserrat"
                android:id="@+id/r_password_ed"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/r_password_ed"
                android:textAlignment="center"

                android:background="@drawable/edbackground"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:hint="Confirm Password"
                android:padding="4dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:inputType="textPassword"
                android:id="@+id/r_confirm_ed"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/r_confirm_ed"
                android:gravity="center"
                android:id="@+id/rel_reset"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pale_orange"
                    android:text="RESET"
                    android:paddingTop="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/resetText"
                    android:textSize="22dp"/>
                <Button
                    android:id="@+id/problem"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/resetText"
                    android:background="@drawable/btn_circle"
                    android:drawableStart="@drawable/ic_baseline_arrow_forward_24"
                    android:drawablePadding="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"

                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>
</ScrollView>